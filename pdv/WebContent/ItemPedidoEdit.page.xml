<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/ItemPedidoList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{itemPedidoHome.wire}"/>

   <param name="itemPedidoFrom"/>
   <param name="itemPedidoId" value="#{itemPedidoHome.itemPedidoId}"/>
   <param name="itemFrom"/>
   <param name="itemId" value="#{itemHome.itemId}"/>

   <param name="pedidoVendaFrom"/>
   <param name="pedidoVendaId" value="#{pedidoVendaHome.pedidoVendaId}"/>
   <param name="formaPagamentoFrom"/>
   <param name="formaPagamentoId" value="#{formaPagamentoHome.formaPagamentoId}"/>

   <param name="statusPedidoFrom"/>
   <param name="statusPedidoId" value="#{statusPedidoHome.statusPedidoId}"/>




   <navigation from-action="#{itemPedidoHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/ItemPedido.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{itemPedidoHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/ItemPedido.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{itemPedidoHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/ItemPedidoList.xhtml"/>
      </rule>
   </navigation>

</page>
