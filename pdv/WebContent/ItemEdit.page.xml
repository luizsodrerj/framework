<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/ItemList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{itemHome.wire}"/>

   <param name="itemFrom"/>
   <param name="itemId" value="#{itemHome.itemId}"/>


   <navigation from-action="#{itemHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/Item.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{itemHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/Item.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{itemHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/ItemList.xhtml"/>
      </rule>
   </navigation>

</page>
